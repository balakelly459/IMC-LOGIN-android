<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityPesagem">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="270dp"
        android:layout_height="403dp"
        app:srcCompat="@tools:sample/avatars"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="2dp"
        tools:srcCompat="@drawable/Pilates_amico" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesagem"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="70dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vamos nos pesar?"
        android:textColor="#ee98fb"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="307dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:srcCompat="@drawable/bonequinho"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="394dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dados da sua pesagem"
        android:textColor="#ee98fb"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="394dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data da pesagem:"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="430dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20/11/2021"
        android:textColor="#000000"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="453dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seu peso atual:"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="489dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="68kg"
        android:textColor="#000000"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="510dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="267dp"
        android:layout_height="50dp"
        android:background="@drawable/button_borda"
        android:backgroundTint="#ee98fb"
        android:text="Pesar Agora"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="545dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="314dp"
        android:layout_height="51dp"
        android:text="Mantenha seu peso sempre atualizado, assim você poderá acompanhar sua evolução."
        android:textColor="#000000"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="340dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_info_24"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="340dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="424dp"
        android:layout_height="276dp"
        android:background="#F4F4F4"
        android:backgroundTint="#FFFFFF"
        app:srcCompat="@drawable/ic_wave_baixo"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="552dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="427dp"
        android:layout_height="302dp"
        app:srcCompat="@drawable/ic_wave_cima"
        tools:layout_editor_absoluteX="-7dp"
        tools:layout_editor_absoluteY="-127dp" />

</androidx.constraintlayout.widget.ConstraintLayout>